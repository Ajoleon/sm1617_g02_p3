<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/logo2"
        android:id="@+id/imageView"
        android:layout_marginBottom="23dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="23dp"
        tools:ignore="ContentDescription" />

    <TextView
        android:text="@string/ip"
        android:layout_height="wrap_content"
        android:id="@+id/textView1"
        android:textSize="16sp"
        android:layout_width="180dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/textView"
        android:layout_marginTop="57dp" />

    <EditText
        android:layout_height="wrap_content"
        android:id="@+id/puerto"
        android:hint="Puerto"
        android:inputType="number"
        tools:ignore="HardcodedText"
        android:layout_width="140dp"
        android:layout_marginTop="26dp"
        android:layout_below="@+id/ip"
        android:layout_alignStart="@+id/ip" />

    <Button
        android:text="@string/guardar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/test_button"
        android:onClick="Ontest"
        android:layout_below="@+id/puerto"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="49dp" />

    <TextView
        android:text="@string/puerto"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:textSize="16sp"
        android:layout_width="180dp"
        android:layout_alignBaseline="@+id/puerto"
        android:layout_alignBottom="@+id/puerto"
        android:layout_alignEnd="@+id/test_button"
        android:layout_marginEnd="69dp" />

    <EditText
        android:layout_height="wrap_content"
        android:id="@+id/ip"
        android:hint="IP"
        android:inputType="text"
        tools:ignore="HardcodedText"
        android:layout_width="140dp"
        android:layout_alignBaseline="@+id/textView1"
        android:layout_alignBottom="@+id/textView1"
        android:layout_toEndOf="@+id/test_button"
        android:layout_marginStart="29dp" />
</RelativeLayout>
